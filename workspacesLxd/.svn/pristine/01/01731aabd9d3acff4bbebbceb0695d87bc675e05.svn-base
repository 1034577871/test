import request from '@/utils/request'

// 查询合同信息录入主列表
export function listContract(query) {
  return request({
    url: '/contract/contractInfo/list',
    method: 'get',
    params: query
  })
}

// 查询合同信息录入主详细
export function getContract(id) {
  return request({
    url: '/contract/contractInfo/' + id,
    method: 'get'
  })
}

// 新增合同信息录入主
export function addContract(data) {
  return request({
    url: '/contract/contractInfo',
    method: 'post',
    data: data
  })
}

// 修改合同信息录入主
export function updateContract(data) {
  return request({
    url: '/contract/contractInfo',
    method: 'put',
    data: data
  })
}

// 删除合同信息录入主
export function delContract(id) {
  return request({
    url: '/contract/contractInfo/' + id,
    method: 'put'
  })
}

// 导出合同信息录入主
export function exportContract(query) {
  return request({
    url: '/contract/contractInfo/export',
    method: 'get',
    params: query
  })
}

export function updateTicketContract(data) {
  return request({
    url: '/contract/contractInfo/saveTicketInfo',
    method: 'put',
    data: data
  })
}
