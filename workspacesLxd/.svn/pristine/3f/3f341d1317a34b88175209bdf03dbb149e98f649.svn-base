    @Override
    public int updateCtBuPayinfoByIds(String[] ids) {
        if (ids != null && ids.length > 0) {
            for (int i = 0; i < ids.length; i++) {
                int i1 = ctBuPayinfoMapper.updateCtBuPayinfoById(ids[i]);
                if (i1 > 0) {
                    ctBuPayinfoDtMapper.updateCtBuPayinfoDtByBid(ids[i]);
                }
            }
        }
        return 1;
    }

